# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/news_scraper

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=news-scraper
KAFKA_GROUP_ID=news-scraper-group

# Scraper Configuration
SCRAPER_TIMEOUT=30000
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
SCRAPER_MAX_CONCURRENCY=5
SCRAPER_RATE_LIMIT=1000

# Authentication
# Make sure to change this to a secure value in production
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1d 